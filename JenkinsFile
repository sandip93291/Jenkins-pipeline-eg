pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
                script {
                    def workspaceDir = pwd()
                    sh "javac ${workspaceDir}/Main.java"
                }
            }
        }
        stage('Run') {
            steps {
                script {
                    def workspaceDir = pwd()
                    sh "java ${workspaceDir}/Main"
                }
            }
        }
    }
}
